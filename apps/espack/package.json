{
    "name": "@espack/espack",
    "author": "Szabolcs Csizmadia",
    "version": "0.0.1",
    "private": true,
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "bin": {
        "espack": "dist/espack.js"
    },
    "scripts": {
        "clean": "rimraf ./dist",
        "build": "pnpm clean && pnpm build:types && ts-node ./src/espack.ts --profile production",
        "build:dev": "pnpm clean && pnpm build:types && ts-node ./src/espack.ts --profile development",
        "build:dev:watch": "pnpm clean && pnpm build:types && ts-node ./src/espack.ts --profile development --watch",
        "build:types": "tsc -p ./tsconfig-npm.json",
        "lint": "eslint src/** --max-warnings=0 && tsc --noEmit",
        "lint:tsc": "tsc --noEmit",
        "lint:fix": "eslint src/** --fix"
    },
    "peerDependencies": {
        "esbuild": "^0.8.54"
    },
    "dependencies": {
        "deep-equal": "2.0.5",
        "joi": "17.4.0"
    },
    "devDependencies": {
        "@espack/ts-config": "*",
        "@rushstack/eslint-config": "2.3.3",
        "@types/deep-equal": "1.0.1",
        "eslint": "7.21.0",
        "rimraf": "3.0.2",
        "ts-node": "9.1.1",
        "typescript": "4.2.3",
        "@types/node": "14.14.37"
    },
    "engines": {
        "node": ">=12.9.0"
    },
    "license": "MIT"
}
