{
    "name": "@espack/espack-website",
    "author": "Szabolcs Csizmadia",
    "version": "0.0.1",
    "private": true,
    "scripts": {
        "clean": "rimraf ./dist",
        "build": "pnpm clean && pnpx espack --profile production",
        "build:dev": "pnpm clean && pnpx espack --profile development",
        "build:dev:watch": "pnpm clean && pnpx espack --profile development --watch",
        "lint": "eslint src/** --max-warnings=0 && tsc --noEmit",
        "lint:tsc": "tsc --noEmit",
        "lint:fix": "eslint src/** --fix"
    },
    "dependencies": {
        "react": "17.0.2",
        "react-dom": "17.0.2"
    },
    "devDependencies": {
        "esbuild": "0.11.11",
        "@espack/espack": "*",
        "@espack/esbuild-sass-plugin": "*",
        "@espack/copy-plugin": "*",
        "@espack/html-plugin": "*",
        "@espack/ts-config": "*",
        "@rushstack/eslint-config": "2.3.3",
        "eslint": "7.21.0",
        "rimraf": "3.0.2",
        "ts-node": "9.1.1",
        "typescript": "4.2.3",
        "@types/react": "17.0.3",
        "@types/react-dom": "17.0.3",
        "@types/node": "14.14.37"
    },
    "engines": {
        "node": ">=12.9.0"
    },
    "license": "MIT"
}
