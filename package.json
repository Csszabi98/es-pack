{
    "name": "espack",
    "author": "Szabolcs Csizmadia",
    "version": "0.0.1",
    "private": true,
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "bin": {
        "build": "dist/espack.js"
    },
    "scripts": {
        "clean": "rimraf ./dist",
        "build": "pnpm clean && tsc -p ./tsconfig-npm.json && ts-node ./lib/espack.ts --profile prod",
        "build:dev": "pnpm clean && ts-node ./lib/espack.ts --profile dev",
        "build:dev:watch": "pnpm clean && ts-node ./lib/espack.ts --profile dev --watch",
        "lint": "eslint lib/** && tsc --noEmit && prettier --check lib",
        "lint:tsc": "tsc --noEmit",
        "lint:fix": "eslint lib/** --fix && prettier --write lib"
    },
    "peerDependencies": {
        "esbuild": "0.8.54",
        "html-minifier": "4.0.0",
        "joi": "17.4.0",
        "sass": "1.32.8"
    },
    "devDependencies": {
        "@types/html-minifier": "4.0.0",
        "@types/node-sass": "4.11.1",
        "@typescript-eslint/eslint-plugin": "4.16.1",
        "@typescript-eslint/parser": "4.16.1",
        "esbuild": "0.8.54",
        "eslint": "7.21.0",
        "eslint-config-airbnb-base": "14.2.1",
        "eslint-config-prettier": "8.1.0",
        "eslint-config-standard": "16.0.2",
        "eslint-plugin-import": "2.22.1",
        "eslint-plugin-node": "11.1.0",
        "eslint-plugin-promise": "4.3.1",
        "eslint-plugin-unused-imports": "1.1.1",
        "html-minifier": "4.0.0",
        "joi": "17.4.0",
        "prettier": "2.2.1",
        "rimraf": "^3.0.2",
        "sass": "1.32.8",
        "ts-node": "9.1.1",
        "typescript": "4.2.3"
    },
    "engines": {
        "node": ">=12.9.0"
    }
}
