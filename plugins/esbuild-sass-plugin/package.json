{
    "name": "@espack/esbuild-sass-plugin",
    "author": "Szabolcs Csizmadia",
    "version": "0.0.1",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "clean": "rimraf ./dist",
        "build": "pnpm clean && pnpm build:types && pnpx espack --profile production",
        "build:dev": "pnpm clean && pnpm build:types && pnpx espack --profile development",
        "build:dev:watch": "pnpm clean && pnpm build:types && pnpx espack --profile development --watch",
        "build:types": "tsc -p ./tsconfig-npm.json",
        "lint": "eslint src/** --max-warnings=0 && tsc --noEmit",
        "lint:tsc": "tsc --noEmit",
        "lint:fix": "eslint src/** --fix"
    },
    "peerDependencies": {
        "esbuild": "^0.11.0"
    },
    "dependencies": {
        "sass": "1.32.8"
    },
    "devDependencies": {
        "@espack/espack": "*",
        "esbuild": "0.11.11",
        "@types/node": "14.14.37",
        "@types/node-sass": "4.11.1",
        "sass": "1.32.8",
        "@espack/ts-config": "*",
        "@rushstack/eslint-config": "2.3.3",
        "eslint": "7.21.0",
        "rimraf": "3.0.2",
        "typescript": "4.2.3"
    },
    "engines": {
        "node": ">=12.9.0"
    },
    "license": "MIT"
}
